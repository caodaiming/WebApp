@model IEnumerable<WebApp.Demo.ViewModels.CategoryViewModel>
@{
    ViewBag.Title = "分类信息";
}

<h2>Index</h2>

<div class="panel panel-title panel-primary">
    <div class="panel-heading ">
        分类列表
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered table-responsive">
            <tr>
                <td>@Html.DisplayNameFor(model => model.CategoryId)</td>
                <td>@Html.DisplayNameFor(model => model.CategoryName)</td>
                <td>@Html.DisplayNameFor(model => model.CategoryInfo)</td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryInfo</td>
                </tr>
            }
        </table>

    </div>
</div>